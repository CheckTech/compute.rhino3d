{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "region":         "us-east-1"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{ user `aws_access_key` }}",
      "secret_key": "{{ user `aws_secret_key` }}",
      "region": "{{ user `region` }}",
      "instance_type": "t2.micro",
      "source_ami": "ami-0535576cd9c173b6d",
      "ami_name": "packer-demo-{{timestamp}}",
      "subnet_id": "subnet-834f83e8",
      "associate_public_ip_address": true,
      "user_data_file": "./bootstrap_win.txt",
      "communicator": "winrm",
      "winrm_username": "Administrator",
      "winrm_password": "SuperS3cr3t!"
    }
  ],
  "provisioners": [
    {
      "type": "powershell",
      "inline": [
        "cd C:\\Users\\Administrator\\Desktop\\Release",
        "Get-Location",
        ".\\compute.frontend.exe stop",
        ".\\compute.frontend.exe start",
        "[Environment]::SetEnvironmentVariable(\"MyTestVariable\", \"MyTestValue\", \"Machine\")"
      ]
    },
    {
      "type": "powershell",
      "inline": ["C:\\ProgramData\\Amazon\\EC2-Windows\\Launch\\Scripts\\InitializeInstance.ps1 -Schedule"]
    }
  ]
}
